import java.io.*;
import java.util.*;

public class Main {

    public static void main(String[] args) throws Exception {
        Scanner scn = new Scanner(System.in);
        String str = scn.nextLine();
        Stack<Character> st = new Stack<>();
        
       boolean ans = Duplicate_Brackets(str , st);
       
          System.out.println(ans);
       

    }
    public static boolean Duplicate_Brackets(String str , Stack<Character>st){
        
        int pop =0;
         for(int i=0 ; i< str.length() ; i++){
            char ch = str.charAt(i);
            
            if(ch !=')'){
                st.push(ch);
            }
            else if(ch==')'){
                if(st.peek()==ch){
                    return false;
                }
                 pop = 0;
                while(st.peek()!='('){
                    st.pop();
                    pop++;
                }
                st.pop();
            }
        }
        if(pop >0){
            return false;
        }
        else {
            return true;
        }
    }

}
